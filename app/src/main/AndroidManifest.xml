<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dllo.bibilala">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application
        android:name=".app.BiBiLaiLaiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".welcome.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.login.SignActivity"/>
        <activity android:name=".activity.login.QuestionActivity"/>
        <activity android:name=".activity.login.RegisterActivity"/>
        <activity android:name=".bangumi.view.CrayonActivity"/>
        <activity android:name=".main.MainActivity"/>
        <activity android:name=".bangumi.view.BangumiActivity"/>


        <activity
            android:name=".search.view.SearchActivity"
            android:theme="@style/Theme.AppCompat.Translucent"/>
        <activity
            android:name=".search.searchdetail.view.SearchDetailActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity android:name=".recommend.activity.hotrecommend.HotRecommendActivity"/>
        <activity android:name=".recommend.activity.hotrecommend.HotVideoActivity"/>

        <activity android:name=".recommend.activity.animation.AnimationActivity"/>
        <activity
            android:name=".live.view.LiveActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"/>

        <activity android:name=".live.type.view.AllTypeActivitys"/>
        <activity android:name=".live.type.view.view.SecondTypeActivity"/>
        <activity android:name=".search.scan.ScanActivity"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".bangumi.view.MoreCrayonActivity"/>
        <activity android:name=".bangumi.view.QuarterlyActivity"/>
        <activity android:name=".find.view.TopicActivity"/>
        <activity android:name=".activity.login.DownLoadActivity"/>
        <activity android:name=".activity.login.SettingPasswordActivity"/>
    </application>

</manifest>