<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="#FB7299">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="设置密码"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/setting_ima_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:padding="@dimen/five"
            android:src="@mipmap/backs"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty"
        android:background="#00000000"/>

    <include
        android:id="@+id/password_setting"
        layout="@layout/include_login"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ten"
        android:background="#00000000"/>

    <include
        android:id="@+id/password_checked"
        layout="@layout/include_login"/>

    <Button
        android:id="@+id/complete_regist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_margin="@dimen/thirty"
        android:background="@drawable/selector_sign_code"
        android:enabled="false"
        android:text="完成"
        android:textColor="@android:color/white"
        />
</LinearLayout>