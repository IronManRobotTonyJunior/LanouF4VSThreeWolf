<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorWhiteLight"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">

        <Button
            android:id="@+id/item_live_foot_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteLight"
            android:text="查看更多"
            android:textColor="@color/colorTextColor"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/item_live_foot_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/red_refresh"
        android:text="5075条新动态,点击刷新!"
        android:textColor="@color/colorTextColor"/>
</RelativeLayout>