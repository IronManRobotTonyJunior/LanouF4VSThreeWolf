<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorGary"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detail_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_margin="@dimen/five"
        android:background="@drawable/shape_search_list"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/search_detail_img_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/ic_arrow_back_black"/>

        <TextView
            android:id="@+id/text_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five"
            android:layout_weight="7"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/colorSearchHint"
            />

        <ImageButton
            android:id="@+id/detail_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:src="@mipmap/ic_scan"/>


    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/search_detail_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPinkMain"
        app:tabSelectedTextColor="@color/colorDetailTabSelect"
        app:tabTextColor="@color/colorTextColor"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/search_detail_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>