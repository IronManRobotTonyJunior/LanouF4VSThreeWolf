<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPinkMain">

        <TextView
            android:id="@+id/second_type_ac_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="24dp"
            android:text="按标题"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/second_type_ima_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/backs" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="26dp"
            android:src="@mipmap/ic_toolbar_menu_search"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp">

        <ProgressBar
            android:id="@+id/ac_down_load_progress_bar"
            style="@style/ProgressBar_Mini"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/progressbar"
            android:max="100"
            android:progress="50"
            android:secondaryProgress="50" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/down_load_tv_all"
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:layout_width="10dp"

                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:text=" / "
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/down_load_tv"
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>


    </FrameLayout>


    <RelativeLayout
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="全部开始"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="90dp"
            android:text="编辑"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/ac_down_load_ima_update"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/updata" />


    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/download" />



</RelativeLayout>