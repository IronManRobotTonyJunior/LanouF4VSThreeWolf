<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorGary"
              android:orientation="vertical">

    <TextView
        android:id="@+id/head_tv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten"
        android:background="@color/colorWhite"
        android:drawableLeft="@mipmap/ic_hint_search"
        android:drawablePadding="@dimen/ten"
        android:drawableRight="@mipmap/ic_scan"
        android:padding="@dimen/ten"
        android:text="搜索视频、番剧、up主或av号"
        android:textColor="@color/colorFindText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="大家都在搜"
        android:textColor="@color/colorFindText"
        />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/find_head_nested"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/find_flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:layout_weight="1"
            android:background="@color/colorFindDivide"/>

        <CheckBox
            android:id="@+id/find_cb_more"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorGary"
            android:button="@null"
            android:drawableLeft="@drawable/selector_find_flow"
            android:gravity="center"
            android:text="查看更多"
            android:textColor="@color/colorTextColor"
            android:textSize="@dimen/twelve"
            />

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:layout_weight="1"
            android:background="@color/colorFindDivide"/>
    </LinearLayout>
</LinearLayout>