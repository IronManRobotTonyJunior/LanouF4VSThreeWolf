<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">
    
    <ImageView
        android:id="@+id/item_live_head_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />
    
    <TextView
        android:id="@+id/item_live_head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_live_head_icon"
        android:layout_toRightOf="@+id/item_live_head_icon"
        android:text="推荐主播"/>
    
    <TextView
        android:id="@+id/item_live_head_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="当前2664个直播"
        />
</RelativeLayout>